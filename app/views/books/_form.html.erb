<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %><%= I18n.t 'message.prohibited this book from being saved' %>:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label I18n.t(:title, scope: "book"), style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label I18n.t(:memo, scope: "book"), style: "display: block" %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <%= form.label I18n.t(:author, scope: "book"), style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label I18n.t(:picture, scope: "book"), style: "display: block" %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
