<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%= t(".Logged_in_as") %> <strong><%= current_user.email %></strong>.
        <%= link_to t(".Edit_profile"), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t(".Logout"), destroy_user_session_path, method: :get, class: 'navbar-link'  %> |
      <% else %>
        <%= link_to t(".Sign_up"), new_user_registration_path, class: 'navbar-link'  %> |
        <%= link_to t(".Login"), new_user_session_path, class: 'navbar-link'  %> |
      <% end %>
      <%= link_to t(".users"), users_path, class: 'navbar-link'  %> |
      <%= link_to t(".books"), books_path, class: 'navbar-link'  %> |
    </p>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
